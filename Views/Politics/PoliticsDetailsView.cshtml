@model BugalDaily.Models.TechArticleModel

@{
    ViewBag.Title = "News Detail";
}

<div class="container mt-4">
    <h2 class="mb-3">@Model.Title</h2>
    <p class="text-muted">
        @Model.SourceName
        @if (Model.PublishedAt.HasValue)
        {
            @("| " + Model.PublishedAt.Value.ToString("f"))
        }
    </p>

    @if (!string.IsNullOrEmpty(Model.UrlToImage))
    {
        <img src="@Model.UrlToImage" class="img-fluid mb-3" alt="News Image" />
    }

    <p><strong>Description:</strong> @Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.Content))
    {
        <div class="mt-4">
            <h5>Full Content:</h5>
            <p>@Model.Content</p>
        </div>
    }

    @* Optional link to source in case user wants original *@
    <div class="mt-3">
        <a href="@Model.Url" class="btn btn-outline-secondary" target="_blank">Read at Source</a>
    </div>
</div>
